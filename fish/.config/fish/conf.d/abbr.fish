# Abbreviations

# Open in VS Code
abbr cfs "code ~/dotfiles/fish/.config/fish/config.fish"
abbr cab "code ~/dotfiles/fish/.config/fish/conf.d/abbr.fish"
abbr cal "code ~/dotfiles/alacritty/.config/alacritty/alacritty.toml"
abbr czsh "code ~/dotfiles/zsh/.zshrc"

# Homebrew
abbr bi "brew install"
abbr bic "brew install --cask"
abbr bcl "brew cleanup"
abbr bl "brew list"
abbr bs "brew search"
abbr brm "brew remove"
abbr bu "brew update ; brew upgrade"
abbr bin "brew info"
# abbr brow "/usr/local/Homebrew/bin/brew"

# Buku
abbr b "buku"

# Restart fish shell
abbr ef "exec fish"

# Force remove files and directories
abbr rmr "rm -rf"

# Clear
abbr cl "clear"

# eza
abbr ls "eza -1"
abbr la "eza -1a"
abbr ll "eza -al"
abbr lt "eza -aTL=2"

# zellij
abbr zj "zellij attach || zellij"

# web-search plugin
abbr ws "web-search"
abbr ddg --position anywhere "duckduckgo"

